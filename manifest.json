{
    "manifest_version": 3,
  
    "name": "ReciPal",
    "description": "Extension to help cooks read online recipes",
    "version": "1.1",
    "icons": { "16": "icon_16.png", "48": "icon_48.png", "128": "icon_128.png"},
    "browser_action": {
      "default_icon": "icon_128.png"
    },
    "content_scripts": [
      {
        "matches": ["http://www.foodnetwork.com/recipes/*","https://cooking.nytimes.com/recipes/*","http://allrecipes.com/recipe/*"],
        "js": ["contentscript.js"],
        "run_at":  "document_end"
      }],
    "permissions": [
      "activeTab",
      "storage",
      "tabs",
      "http://www.foodnetwork.com/recipes/*",
      "https://cooking.nytimes.com/recipes/*",
      "http://allrecipes.com/recipe/*"
    ],
    "background":{
      "scripts": ["recipal.js"]
    }
  }