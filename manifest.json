{
    "manifest_version": 2,
  
    "name": "ReciPal",
    "description": "This extension aids cooks in reading online recipes",
    "version": "1.1",
  
    "browser_action": {
      "default_icon": "icon_128.png"
    },
    "permissions": [
      "activeTab",
      "storage",
      "tabs",
      "http://www.foodnetwork.com/recipes/*",
      "https://cooking.nytimes.com/recipes/*",
      "http://allrecipes.com/recipe/*"
    ],
    "background":{
      "scripts": ["recipal.js"]
    }
  }